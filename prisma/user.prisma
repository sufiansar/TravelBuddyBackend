model User {
  id             String       @id @default(uuid())
  fullName       String
  username       String?      @unique
  email          String        @unique
  password       String
  role           UserRole      @default(USER)
  userStatus     UserStatus    @default(ACTIVE)
  bio            String?
  profileImage   String?
  gender         Gender?
  currentLocation String?
  verifiedBadge  Boolean       @default(false)
  interests      String[]      
  visitedCountries String[]
  isPublic       Boolean       @default(true)
  travelPlans       TravelPlan[]
  reviewsGiven      Review[]        @relation("GivenReviews")
  reviewsReceived   Review[]        @relation("ReceivedReviews")
  matches           TravelMatch[]    @relation("UserMatches")
  meetupsHosted     Meetup[]        @relation("HostMeetups")
  meetupMembers     MeetupMember[]
  planRequests      TravelPlanRequest[]
  subscription      Subscription?
  payments          Payment[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  @@index([email])
  @@map("users")
}


