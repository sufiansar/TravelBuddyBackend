model Review {
  id          String    @id @default(uuid())
  rating      Int       
  comment     String?
  createdAt   DateTime  @default(now())
  reviewerId  String
  receiverId  String
  travelPlanId String?
  reviewer    User      @relation("GivenReviews", fields: [reviewerId], references: [id])
  receiver    User      @relation("ReceivedReviews", fields: [receiverId], references: [id])
  travelPlan  TravelPlan? @relation(fields: [travelPlanId], references: [id])

  @@map("reviews")
}